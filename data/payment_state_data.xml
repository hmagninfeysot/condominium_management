<odoo>

    <!--status payement-->
    <record id="payement_draft" model="payment.state">
        <field name="name">Draft</field>
    </record>
    <record id="payment_validated" model="payment.state">
        <field name="name">Validated</field>
    </record>
    <record id="payment_cancelled" model="payment.state">
        <field name="name">Cancelled</field>
    </record>
    <record id="payment_mistake" model="payment.state">
        <field name="name">Mistake</field>
    </record>


    <record id="action_planified_payment_approval" model="ir.cron">
            <field name="name">Action Planified: Create payment_approval</field>
            <field name="model_id" ref="model_payment_approval"/>
            <field name="state">code</field> 
            <field name="code">model.run_payment_approval()</field> 
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="priority">1</field>
            <field name="active" eval="True"/>
            <field name="doall" eval="False"/>
    </record>
</odoo>