<odoo>
    <record id="payment_approval_view_tree" model="ir.ui.view">
        <field name="name">payment_approval.view.tree</field>
        <field name="model">payment.approval</field>
        <field name="arch" type="xml">
            <tree editable="top" default_order='date desc, apartement_id' 
                    decoration-info="state_id == 1" 
                    decoration-danger="state_id == 4" 
                    decoration-muted="state_id == 3" 
                    decoration-success="state_id == 2">
                <field name="apartment_id"/>
                <field name="homeowner_id"/>
                <field name="montlhy_payment_theorical"/>
                <field name="real_payment"/>
                <field name="currency_id" invisible="1"/>
                <field name="date"/>
                <field name="state_id"/>
                <field name="comment"/>
            </tree>
        </field>
    </record>
</odoo>