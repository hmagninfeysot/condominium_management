<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="CMupdate_account_move_form" model="ir.ui.view">
        <field name="name">CMupdate.account_move_form</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="model">account.move</field>
        <field name="priority">90</field>
        <field name="arch" type="xml">
        
          <!-- Adding field in form view-->  
          <xpath expr="//page[@name='other_info']" position="before">
              <page string="Account move distribution" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'in_refund', 'in_receipt'))]}">
                    <group><field name="share_of_ownership_total"/></group>
                    <br></br>
                    <field name="distribution_account_move_ids">
                                <tree editable="bottom">
                                    <field name="name" string="identifiant"/>
                                    <field name="apartment_id"/>
                                    <field name="homeowner_id"/>
                                    <field name="share_of_ownership"/>
                                    <field name='date'/>
                                    <field name="amount_total" widget="monetary"/>
                                    <field name="distribution_amount" widget="monetary"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="ref"/>
                                    <field name="partner_id"/> 
                                </tree>
                                <form>
                                    <sheet>
                                      <group>
                                          <label for="name"/>
                                          <label for="apartment_id"/>
                                          <label for="homeowner_id"/>
                                          <label for="share_of_ownership"/>
                                          <label for="date"/>
                                          <label for="amount_total"/>
                                          <label for="distribution_amount"/>
                                          <label for="currency_id"/>
                                          <label for="ref"/>
                                          <label for="partner_id"/>
                                              <div>
                                                  <field name="name" class="oe_inline"/>
                                                      <span class="oe_inline"></span>
                                                  <field name="apartment_id" class="oe_inline"/>
                                                      <span class="oe_inline"></span>
                                                  <field name="homeowner_id" class="oe_inline"/>
                                                      <span class="oe_inline"></span>
                                                  <field name="share_of_ownership" class="oe_inline"/>
                                                      <span class="oe_inline"></span>
                                                  <field name="date" class="oe_inline"/>
                                                      <span class="oe_inline"></span>
                                                  <field name="amount_total" class="oe_inline"/>
                                                      <span class="oe_inline"></span>
                                                  <field name="distribution_amount" class="oe_inline"/>
                                                      <span class="oe_inline"></span>
                                                  <field name="currency_id" class="oe_inline"/>
                                                      <span class="oe_inline"></span>
                                                  <field name="ref" class="oe_inline"/>
                                                      <span class="oe_inline"></span>
                                                  <field name="partner_id" class="oe_inline"/>
                                                      <span class="oe_inline"></span>
                                              </div>
                                      </group>
                                    </sheet>
                                </form>
                    </field>
              </page>
          </xpath>

        </field>
    </record> 
<!--
  <field name="relation_ids" widget='many2many_tags' options="{'color_field': 'color', 'm2o_dialog': False, 'create': False, 'create_edit': False}"/>
  -->
</odoo>