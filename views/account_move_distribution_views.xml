<odoo>

    <record id="account_move_distribution_tree" model="ir.ui.view">
        <field name="name">account.move.distribution.tree</field>
        <field name="model">account.move.distribution</field>
        <field name="arch" type="xml">
            <tree string="Account move distribution">
                    <field name="name" string="identifiant"/>
                    <field name="apartment_id"/>
                    <field name="homeowner_id"/>
                    <field name="share_of_ownership"/>
                    <field name='account_move_id'/>
                    <field name='date'/>
                    <field name="amount_total" widget="monetary"/>
                    <field name="distribution_amount" widget="monetary"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="ref"/>
                    <field name="partner_id"/>                   
            </tree>
        </field>
    </record>

    <record id="account_move_distribution_form" model="ir.ui.view">
        <field name="name">account.move.distribution.form</field>
        <field name="model">account.move.distribution</field>
        <field name="arch" type="xml">
            <form string="Account move distribution">
                <sheet>
                    <h1><field name="name" string="identifiant"/></h1>
                    <group>
                        <group>
                            <field name="apartment_id"/>
                            <field name="homeowner_id"/>
                            <field name="share_of_ownership"/>
                        </group>
                        <group>
                            <field name='account_move_id'/>
                            <field name='date'/>
                            <field name="amount_total" widget="monetary"/>
                            <field name="distribution_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="ref"/>
                            <field name="partner_id"/>
                        </group>
                    </group> 
                </sheet>                  
            </form>
        </field>
    </record>

    

</odoo>